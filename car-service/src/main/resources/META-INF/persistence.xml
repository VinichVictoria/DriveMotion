<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="CarPU" transaction-type="JTA">

        <class>com.drivemotion.car.model.Car</class>
        <class>com.drivemotion.user.model.User</class>
        <class>com.drivemotion.order.model.RentalOrder</class>
        <class>com.drivemotion.car.model.MaintenanceLog</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/drive_motion_db"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.jdbc.user" value="viktoriavinicenko"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

        </properties>
    </persistence-unit>
</persistence>